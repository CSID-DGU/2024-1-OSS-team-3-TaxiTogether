<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_go_back6_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/go_back"
        android:onClick="button1" />

    <ImageView
        android:id="@+id/caution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/caution" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="20dp"
        android:text="이런! 경유지가 너무 멀어서 매칭이 되지 않았어요\n다시 입력해주세요!"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_back_6_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_style"
        android:text="다시 입력하러 가기"
        android:textColor="#545F71"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="button2" />

    <Button
        android:id="@+id/button_go_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/button_style"
        android:text="처음으로 돌아가기"
        android:textColor="#545F71"
        android:textSize="30sp"
        android:textStyle="bold"
        android:onClick="button3" />
</LinearLayout>