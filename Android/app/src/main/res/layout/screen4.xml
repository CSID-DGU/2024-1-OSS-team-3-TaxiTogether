<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".MainActivity">

    <!-- Horizontal LinearLayout to hold buttons side by side -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <!-- Button go back -->
        <Button
            android:id="@+id/button_go_back2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/go_back"
            android:onClick="button1" />

        <!-- Button test -->
        <Button
            android:id="@+id/button_test_go6_2"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:onClick="button2"
            android:text="매칭이 되었다고 가정" />
        <Button
            android:id="@+id/button_test_go6_1"
            android:layout_width="174dp"
            android:layout_height="40dp"
            android:onClick="button3"
            android:text="매칭이 실패했다고 가정" />
    </LinearLayout>

    <!-- TextView -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="출발지를 입력해주세요"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="30sp"
        android:textStyle="bold" />

    <!-- RelativeLayout -->
    <RelativeLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        >

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/map_view"
            android:layout_below="@id/map_view"
            android:layout_marginLeft="-70dp"
            android:layout_marginTop="-70dp">

            <ImageButton
                android:id="@+id/find_current_location"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:onClick="find_current_location"
                android:src="@drawable/currentlocation"/>

        </FrameLayout>
    </RelativeLayout>

</LinearLayout>
